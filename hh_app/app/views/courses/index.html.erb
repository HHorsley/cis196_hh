<head>

	<style>
	tbody > tr {
		cursor: pointer;
	}

	table {
		margin-left: 15% ;
	}

	</style>

</head>
<body>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Votes</th>
			<th>Department</th>
			<th>Topic</th>
			<th>Possible Instructor</th>
			<th>Idea Creator</th>
		</tr>
	</thead>
		<% @courses.each do |course| %>
	<tbody>
		<%= link_to(@course) do %>
		<tr onclick="location.href='<%= course_path(course.id) %>'">
			<td><%= "#{course.votes_for}"%></td>
			<td><%= course.department %></td>
			<td><%= course.topic %></td>
			<td><%= course.desired_instructor %></td>
			<%if course.user == nil %>
				<td>N/A</td>
			<% else%>
				<td><%=  course.user.name %></td>
			<%end%>
		</tr>
		<% end %>
	</tbody>
	<% end %>
</table>
</body>
